<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthew.consumerapp.LoginActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/imageView17"
        android:layout_marginStart="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_height="43dp"
        android:layout_width="0dp"
        android:src="@drawable/user"
        android:id="@+id/imageView16"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintRight_toRightOf="@+id/imageView15"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView17"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="59dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView15" />

    <ImageView
        android:layout_height="50dp"
        android:layout_width="42dp"
        android:src="@drawable/password"
        android:id="@+id/imageView15"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txtPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toTopOf="@+id/txtPassword"
        android:layout_marginRight="8dp" />

    <Button
        android:layout_height="0dp"
        android:layout_width="115dp"
        android:id="@+id/btnIngresar"
        android:text="@string/login"
        android:onClick="login"
        android:textColor="@drawable/button_text_color"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/txtRut"
        android:hint="@string/edit_rut"
        android:textSize="@dimen/text_size_standar"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtPassword"
        app:layout_constraintRight_toRightOf="@+id/txtPassword"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtPassword"
        app:layout_constraintTop_toTopOf="@+id/imageView16" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtPassword"
        android:hint="@string/edit_password"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size_standar"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="246dp"
        android:layout_marginRight="2dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
