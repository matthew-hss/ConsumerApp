<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthew.consumerapp.LoginActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/imageView17"
        android:layout_marginStart="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:src="@drawable/user"
        android:id="@+id/imageView16"
        app:layout_constraintRight_toLeftOf="@+id/txtPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtPassword"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView17"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView15" />

    <ImageView
        android:layout_height="42dp"
        android:layout_width="0dp"
        android:src="@drawable/password"
        android:id="@+id/imageView15"
        app:layout_constraintRight_toLeftOf="@+id/txtPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnIngresar"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="44dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/txtRut"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="14dp" />

    <Button
        android:layout_height="0dp"
        android:layout_width="115dp"
        android:id="@+id/btnIngresar"
        android:text="@string/login"
        android:onClick="login"
        android:textColor="@drawable/button_text_color"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_height="56dp"
        android:layout_width="150dp"
        android:id="@+id/txtRut"
        android:hint="@string/edit_rut"
        android:textSize="@dimen/text_size_standar"
        android:layout_marginStart="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/imageView15"
        android:layout_marginLeft="13dp"
        tools:layout_editor_absoluteY="180dp" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtPassword"
        android:hint="@string/edit_password"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size_standar"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="84dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView17"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="84dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

</android.support.constraint.ConstraintLayout>
